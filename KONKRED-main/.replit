run = "npm install && npm run dev -- --port 3000 --hostname 0.0.0.0"
language = "nodejs"
modules = ["nodejs-20"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[agent]
expertMode = true

[userenv]

[userenv.shared]
NOWPAYMENTS_API_URL = "https://api.nowpayments.io"
NOWPAYMENTS_PAY_CURRENCY = "usdt"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42547
externalPort = 3000
